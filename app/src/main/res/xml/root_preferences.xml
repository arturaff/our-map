<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory app:title="@string/broadcast">
        <CheckBoxPreference
            app:defaultValue="true"
            app:key="share_location"
            app:title="@string/share_location" />

        <SeekBarPreference
            android:max="60"
            app:defaultValue="1"
            app:key="delay"
            app:min="1"
            app:showSeekBarValue="true"
            app:title="@string/delay" />
    </PreferenceCategory>

    <PreferenceCategory app:title="@string/map">
        <SeekBarPreference
            android:max="20"
            app:showSeekBarValue="true"
            app:defaultValue="17"
            app:key="zoom"
            app:min="4"
            app:title="@string/zoom" />

        <ListPreference
            app:defaultValue="OpenTopo"
            app:entries="@array/map_sources"
            app:entryValues="@array/map_sources"
            app:key="map_source"
            app:title="@string/map_source" />
    </PreferenceCategory>
</PreferenceScreen>